    font-size: 35px;
    font-weight: 700;

html, body {
    width: 100%;
    height: 0;
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    background: #095859;
    color: black;
}

#titlebar {
    font-family: 'Noto Sans', sans-serif;
    color: white;
    // font-family: 'Oswald', sans-serif;
    letter-spacing: 0.03em;
    font-size: 35px;
    background: linear-gradient(#293679, #273474);
    padding: 0.6em 1em;
}

#background {
    left: -5px;
    right: -5px;
    top: -5px;
    position: fixed;
    filter: brightness(120%) saturate(140%) blur(10px);
    z-index: -1;
    width: 105%;
}

nav {
    position: fixed;
    display: inline-block;
    width: 300px;
    font-family: 'Noto Sans', sans-serif;
    // font-family: 'Oswald', sans-serif;
    font-size: 28px;
    padding: 1em;
    color: blue;

    @media (max-width: 1000px) {
        display: none;
    }

    a {
        background: white;
        padding: 0.1em 0.6em;
        margin: 0.7em 0;
        display: block;
        cursor: pointer;
        border-radius: 1px;
        display: table;
        font-weight: 600;
        position: relative;
        left: 0;
        transition: all 0.1s ease-in;

        &:hover {
            left: 5px;
        }
    }
}

main {
    position: relative;
    top: 0;
    left: 300px;
    max-width: calc(100% - 300px);

    @media (max-width: 1000px) {
        left: 0;
        max-width: 100%;
    }

    font-family: 'Noto Sans', sans-serif;
    font-size: 20px;
    width: 800px;
    line-height: 1.6em;

    p {
        letter-spacing: 0.03em;
        color: #011635;
    }

    // margin: 0 auto;
    strong {
        font-weight: 600;
    }

    #content {
        padding: 20px;
        background: white;
        margin: 0 10px;
    }

    &>h1 {
        color: blue;
        font-weight: 600;
        padding: 20px;
        text-shadow: 1px 1px 60px white;
    }

    a {
        color: black;
        text-decoration: none;

        svg {
            transition: 0.3s all;
        }

        &.rotate svg {
            transition: 0.3s all;
            transform: rotate(180deg);
        }
    }

    blockquote {
        background: rgba(#BCC9C2, 0.2);
        margin: 0;
        padding: 0 40px;
        display: table;
        border-left: 4px solid blue;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: -20px;
        width: calc(100% + 40px);

        td {
            padding: 1em 20px;
        }

        tr.hide {
            display: none;
        }

        .even {
            background: rgba(#BCC9C2, 0.2);
        }

        .feather {
            position: relative;
            top: 3px;
        }

        .second td {
            padding-top: 0;
            padding-bottom: 1.6em;
        }
    }

    h1 {
    }
}
