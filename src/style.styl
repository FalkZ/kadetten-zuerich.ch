black = #26283b;
blue = #293679;
oswald =
    font-family: 'Oswald', sans-serif;
    letter-spacing: 0.03em;
    font-size: 35px;
    font-weight: 700;

html, body {
    width: 100%;
    height: 0;
}

* {
    box-sizing: border-box;
}

#app {
    overflow-x: hidden;
    padding-top: 80px;
}

body {
    margin: 0;
    background: #095859;
    color: black;
}

a {
    cursor: pointer;
}

#titlebar {
    top: 0;
    background: linear-gradient(#293679, #273474);
    padding: 1.5em 1em;
    color: white;
    position: fixed;
    left: 0;
    right: 0;
    z-index: 2;

    @media (max-width: 800px) {
        padding: 2em 1em;
    }

    img {
        float: right;
        height: 2.5em;
        margin: -4px 5px;
    }

    a {
        padding: 0 10px;
        color: white;
        text-decoration: none;
        font-family: 'Noto Sans', sans-serif;
        // font-family: 'Oswald', sans-serif;
        // letter-spacing: 0.04em;
        font-size: 24px;
        font-weight: 600;
    }

    svg {
        position: relative;
        top: 3.5px;
    }
}

#background {
    left: -5px;
    right: -5px;
    top: -5px;
    position: fixed;
    filter: brightness(120%) saturate(140%) blur(10px);
    z-index: -1;
    min-width: 105%;
    min-height: 105%;
}

nav {
    position: fixed;
    display: inline-block;
    width: 300px;
    font-family: 'Noto Sans', sans-serif;
    // font-family: 'Oswald', sans-serif;
    font-size: 28px;
    padding: 1em;
    color: blue;
    left: 0;
    transition: left 0.3s cubic-bezier(0, 1, 0.5, 1);

    &.open {
        transition-delay: 0.1s;
    }

    &.closed {
        left: -300px;
    }

    a {
        // user-select: none;
        background: white;
        padding: 0.1em 0.6em;
        margin: 0.7em 0;
        display: block;
        cursor: pointer;
        border-radius: 1px;
        display: table;
        font-weight: 600;
        position: relative;
        left: 0;
        transition: all 0.1s ease-in;

        &:hover {
            left: 5px;
        }
    }
}

main {
    position: relative;
    top: 0;
    left: 300px;
    max-width: calc(100% - 300px);
    transition: left 0.3s cubic-bezier(0, 1, 0.5, 1);

    &.closed {
        transition-delay: 0.1s;
        left: 0;
    }

    @media (max-width: 1000px) {
        max-width: 100%;
    }

    h1, h2, h3, h4, h5, h6 {
        line-height: 1.3em;
    }

    font-family: 'Noto Sans', sans-serif;
    font-size: 20px;
    width: 800px;
    line-height: 1.6em;

    p {
        letter-spacing: 0.03em;
        color: #011635;
    }

    ol, ul {
        padding-left: 1em;
    }

    li {
        padding-left: 10px;
    }

    // margin: 0 auto;
    strong {
        font-weight: 600;
    }

    th {
        text-align: left;
        padding: 10px 20px;
    }

    img {
        width: 300px;
        max-width: 100%;
        padding-right: 20px;
        padding-bottom: 20px;
    }

    .galleryImages {
        width: auto;
        height: 300px;
        display: inline-block;
    }

    span {
        display: block;
        width: 100%;
    }

    #content {
        padding: 20px;
        background: white;
        margin: 0 30px;

        @media (max-width: 800px) {
            margin: 0 10px;
        }

        margin-bottom: 30px;
    }

    &>h1 {
        color: blue;
        font-weight: 600;
        padding: 20px;
        text-shadow: 1px 1px 60px white;
        margin: 20px;

        @media (max-width: 800px) {
            margin: 20px 0px;
        }
    }

    h2:not(:nth-child(1)) {
        border-top: 1px solid lightgray;
        padding-top: 1em;
    }

    a {
        color: blue;
        text-decoration: none;

        // border-bottom: 1px solid blue;
        svg {
            transition: 0.3s all;
        }

        &.rotate svg {
            transition: 0.3s all;
            transform: rotate(180deg);
        }
    }

    blockquote {
        background: rgba(#BCC9C2, 0.2);
        margin: 0;
        padding: 0 40px;
        display: table;
        border-left: 4px solid blue;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: -20px;
        width: calc(100% + 40px);

        td {
            padding: 1em 20px;
        }

        tr.hide {
            display: none;
        }

        .even {
            background: rgba(#BCC9C2, 0.2);
        }

        .feather {
            position: relative;
            top: 3px;
        }

        .second td {
            padding-top: 0;
            padding-bottom: 1.6em;
        }
    }

    h1 {
    }
}
