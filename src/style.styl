oswald =
    font-family: 'Oswald', sans-serif;
    letter-spacing: 0.03em;
    font-size: 35px;
    font-weight: 700;

html, body {
    width: 100%;
    height: 0;
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    background: #095859;
    color: black;
}

#titlebar {
    color: white;
    font-family: 'Oswald', sans-serif;
    letter-spacing: 0.03em;
    font-size: 35px;
    font-weight: 700;
    background: linear-gradient(#293679, #273474);
    padding: 0.3em 1em;
}

#background {
    left: -5px;
    right: -5px;
    top: -5px;
    position: fixed;
    filter: brightness(120%) saturate(140%) blur(10px);
    z-index: -1;
    width: 105%;
}

nav {
    position: fixed;
    display: inline-block;
    width: 200px;
    font-family: 'Oswald', sans-serif;
    font-weight: 700;
    font-size: 24px;
    font-weight: bold;
    padding: 1em;
    color: white;

    a {
        padding: 0.5em;
        display: block;
        cursor: pointer;
    }
}

main {
    background: white;
    position: relative;
    top: 0;
    left: 200px;
    font-family: 'Noto Sans', sans-serif;
    font-size: 20px;
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;

    a {
        color: black;
        text-decoration: none;

        svg {
            transition: 0.3s all;
        }

        &.rotate svg {
            transition: 0.3s all;
            transform: rotate(180deg);
        }
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 -20px;
        width: calc(100% + 40px);

        td {
            padding: 1em 20px;
        }

        tr.hide {
            display: none;
        }

        .even {
            background: rgba(#BCC9C2, 0.2);
        }

        .feather {
            position: relative;
            top: 3px;
        }

        .second td {
            padding-top: 0;
            padding-bottom: 1.6em;
        }
    }

    h1 {
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
    }
}
